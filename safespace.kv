#:kivy 2.0.0
#:import Factory kivy.factory.Factory
#:import MDLabel kivymd.uix.label.MDLabel
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import MDSpinner kivymd.uix.spinner.MDSpinner

<SafeSpaceLayout>:
    orientation: "vertical"
    spacing: 10
    padding: 10

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        MDIconButton:
            icon: "play-pause"
            on_release: root.start_stop_scanning()

        MDLabel:
            id: status_label
            text: "Status: Stopped"
            halign: "center"

    GridLayout:
        cols: 2
        row_force_default: True
        row_default_height: "40dp"
        spacing: 10

        MDLabel:
            text: "Device Name:"
            halign: "right"

        TextInput:
            id: device_name_input
            multiline: False

        MDLabel:
            text: "Device Type:"
            halign: "right"

        Spinner:
            id: device_type_spinner
            text: "All"
            values: ("All", "Phone", "Computer", "Audio", "Peripheral", "Other")

        MDLabel:
            text: "Manufacturer:"
            halign: "right"

        Spinner:
            id: device_manufacturer_spinner
            text: "All"
            values: ("All", "Apple", "Samsung", "Sony", "Other")

        MDLabel:
            text: "RSSI:"
            halign: "right"

        MDSlider:
            id: rssi_slider
            min: -100
            max: 0
            value: -70

        MDLabel:
            text: "Detection Time:"
            halign: "right"

        Spinner:
            id: detection_time_spinner
            text: "All"
            values: ("All", "1 min", "5 min", "15 min", "30 min", "60 min")

        MDLabel:
            text: "Connection Status:"
            halign: "right"

        Spinner:
            id: connection_status_spinner
            text: "All"
            values: ("All", "Connected", "Disconnected")

        MDLabel:
            text: "Proximity Zone:"
            halign: "right"

        Spinner:
            id: proximity_zone_spinner
            text: "All"
            values: ("All", "Immediate", "Near", "Far")

    BoxLayout:
        size_hint_y: None
        height: "40dp"

        MDLabel:
            id: distance_label
            text: "Distance: -"
            halign: "center"
